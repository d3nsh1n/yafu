{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "outDir": "dist",
        "lib": ["esnext"],
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
