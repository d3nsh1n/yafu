{
    "name": "@denshin/yafu",
    "type": "module",
    "version": "1.1.3",
    "description": "File utility to reduce boilerplate",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        ".": "node .",
        "dev": "npx nodemon .",
        "tw": "npx tsc -w",
        "bw": "npx babel -w src --out-dir dist --copy-files --extensions \".ts\"",
        "deploy": "pkg . --targets node16-win-x64 --out-path ./standalones",
        "deploy:debug": "pkg . --targets node16-win-x64  --out-path ./standalones -d"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/d3nsh1n/yafu.git"
    },
    "author": "Denshin",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/d3nsh1n/yafu/issues"
    },
    "homepage": "https://github.com/d3nsh1n/yafu#readme",
    "dependencies": {
        "chalk": "^5.1.2",
        "fs-extra": "^11.1.0",
        "yaml": "^2.1.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^18.11.11",
        "babel-plugin-add-import-extension": "^1.6.0",
        "typescript": "^4.9.3"
    },
    "files": [
        "dist"
    ]
}
